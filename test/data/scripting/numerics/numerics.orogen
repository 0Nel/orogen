name 'numerics'
version '0.1'

task_context "Test" do
    method("m1").
        returns("int").
        argument("a", "short").
        argument("b", "unsigned short").
        argument("c", "char").
        argument("d", "unsigned char")

    method("m2").
        argument("a", "int").
        argument("b", "unsigned int").
        argument("c", "long").
        argument("d", "unsigned long")

    method("m3").
        argument("a", "long long").
        argument("b", "unsigned long long").
        argument("c", "float").
        argument("d", "double")
end

static_deployment do
    test = task("Test").
        periodic(1).
        start
end

