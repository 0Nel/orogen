# This module is used primarily in TC_GenerationToolkit#test_simple in
# test_toolkit.rb. It is also used in TC_GenerationBuild#test_auto_regen_toolkit
# to test the automatic regeneration of toolkits when input files change.
#
# It demonstrates orogen's toolkit generation capabilities for simple types.
name "simple"

toolkit do
    load 'simple.h'
end

task_context 'Task' do
    ['int', 'unsigned int', 'long', 'unsigned long',
        'long long', 'unsigned long long',
        '/Test/BaseTypes'].each_with_index do |typename, i|
        property "base#{i}", typename
    end

    input_port 'in1', '/std/vector<uint8_t>'
    input_port 'in2', '/Test/BASIC_ENUM'
    input_port 'in3', '/Test/BaseTypes'
    input_port 'in4', '/Test/Timestamp'
    input_port 'in5', '/Test/Image'
end

static_deployment do
end

