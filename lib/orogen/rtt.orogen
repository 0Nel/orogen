name "RTT"

task_context "TaskContext" do
    rtt_states = Hash[*['INIT', 'PRE_OPERATIONAL', 'FATAL_ERROR', 'STOPPED',
        'ACTIVE', 'RUNNING', 'RUNTIME_WARNING', 'RUNTIME_ERROR', 'FATAL_ERROR'].
        map { |v| [v, :toplevel] }.flatten]

    # Define the standard RTT states, but hack to *not* enable the extended
    # state support
    instance_variable_set :@states, rtt_states
end

task_context "DataDrivenTask"

