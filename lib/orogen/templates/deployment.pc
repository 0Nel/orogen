prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
libdir=${prefix}/lib/orocos
includedir=${prefix}/include/orocos
deffile=${prefix}/share/orogen/<%= File.basename(component.deffile) %>
toolkits=<%= component.used_toolkits.map { |_, tk, _| tk.name.gsub(/-toolkit.*/, '') }.join(" ") %> <%= component.name if component.toolkit %>

Name: <%= component.name %>
Version: <%= component.version %>
Description: the static deployment defined for the <%= component.name %> component

